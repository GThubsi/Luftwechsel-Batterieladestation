<body>
    <h1>Luftwechselrechner für Batterieladestationen</h1>
    <p>Berechnung gemäß österreichischen Normen (TRVB 600, ÖNORM EN 50604)</p>

    <div class="form-group">
        <label for="raumvolumen">Raumvolumen (m³):</label>
        <input type="number" id="raumvolumen" placeholder="z.B. 60">
    </div>

    <div class="form-group">
        <label for="h2-rate">Wasserstoff-Freisetzungsrate (m³/h):</label>
        <input type="number" id="h2-rate" step="0.01" placeholder="z.B. 0.05">
    </div>

    <div class="form-group">
        <label for="h2-konz">Max. zulässige H₂-Konzentration (%):</label>
        <input type="number" id="h2-konz" value="1" step="0.1">
    </div>

    <button onclick="berechnen()">Berechnen</button>

    <div id="result">
        <h3>Ergebnis</h3>
        <p><strong>Minimaler Luftwechsel:</strong> <span id="luftwechsel">-</span> 1/h</p>
        <p><strong>Empfehlung:</strong> <span id="empfehlung">-</span></p>
    </div>

    <div class="norm">
        <h3>Relevante Normen (Österreich)</h3>
        <ul>
            <li>TRVB 600 (Brandschutzrichtlinie)</li>
            <li>ÖNORM EN 50604 (Ladeinfrastruktur)</li>
            <li>EN 62282-3-201 (Wasserstoffsicherheit)</li>
        </ul>
    </div>

    <script>
        function berechnen() {
            const V = parseFloat(document.getElementById('raumvolumen').value);
            const Q_H2 = parseFloat(document.getElementById('h2-rate').value);
            const C_max = parseFloat(document.getElementById('h2-konz').value) / 100;

            if (isNaN(V) || isNaN(Q_H2) || isNaN(C_max)) {
                alert("Bitte alle Felder ausfüllen!");
                return;
            }

            // Berechnung
            const n = Q_H2 / (V * C_max);
            const n_empfohlen = Math.max(6, n).toFixed(1);

            // Ergebnis anzeigen
            document.getElementById('luftwechsel').textContent = n.toFixed(3);
            document.getElementById('empfehlung').textContent = 
                `Mindestens ${n_empfohlen} 1/h (mechanische Lüftung + H₂-Sensoren)`;
            document.getElementById('result').style.display = 'block';
        }
    </script>
</body>
